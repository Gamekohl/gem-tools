{
  "name": "gem-tools",
  "version": "1.1.4",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:coverage": "jest --ci --coverage",
    "ci": "npm run check:specs && npm run test:ci",
    "update-version": "node scripts/update-version.mjs",
    "prebuild": "npm run update-version",
    "check:specs": "node scripts/check-component-tests.mjs",
    "serve:ssr": "node dist/gem-tools/server/server.mjs"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/testing/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.1.2",
    "@angular/cdk": "^21.1.2",
    "@angular/common": "^21.1.2",
    "@angular/compiler": "^21.1.2",
    "@angular/core": "^21.1.2",
    "@angular/forms": "^21.1.2",
    "@angular/material": "^21.1.2",
    "@angular/platform-browser": "^21.1.2",
    "@angular/platform-browser-dynamic": "^21.1.2",
    "@angular/platform-server": "^21.1.2",
    "@angular/router": "^21.1.2",
    "@angular/ssr": "^21.1.2",
    "@ng-icons/core": "^33.0.0",
    "@ng-icons/tabler-icons": "^33.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@vercel/analytics": "^1.6.1",
    "@vercel/node": "^5.5.28",
    "express": "^5.1.0",
    "marked": "^17.0.1",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.2",
    "@tailwindcss/typography": "^0.5.19",
    "@types/express": "^5.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.10",
    "autoprefixer": "^10.4.24",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^16.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3"
  },
  "overrides": {
    "@vercel/node": {
      "path-to-regexp": "6.3.0",
      "undici": "7.20.0"
    },
    "@isaacs/brace-expansion": "5.0.1"
  }
}
