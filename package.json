{
  "name": "gem-tools",
  "version": "1.2.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:coverage": "jest --ci --coverage",
    "ci": "npm run check:specs && npm run test:ci",
    "update-version": "node scripts/update-version.mjs",
    "prebuild": "npm run update-version",
    "check:specs": "node scripts/check-component-tests.mjs",
    "serve:ssr": "node dist/gem-tools/server/server.mjs"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/testing/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.1.5",
    "@angular/cdk": "^21.1.5",
    "@angular/common": "^21.1.5",
    "@angular/compiler": "^21.1.5",
    "@angular/core": "^21.1.5",
    "@angular/forms": "^21.1.5",
    "@angular/material": "^21.1.5",
    "@angular/platform-browser": "^21.1.5",
    "@angular/platform-browser-dynamic": "^21.1.5",
    "@angular/platform-server": "^21.1.5",
    "@angular/router": "^21.1.5",
    "@angular/ssr": "^21.1.4",
    "@ng-icons/core": "^33.1.0",
    "@ng-icons/tabler-icons": "^33.1.0",
    "@tailwindcss/postcss": "^4.2.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/node": "^5.6.6",
    "express": "^5.2.1",
    "marked": "^17.0.3",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.16.1"
  },
  "devDependencies": {
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.5",
    "@tailwindcss/typography": "^0.5.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "autoprefixer": "^10.4.24",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^16.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.0",
    "typescript": "~5.9.3"
  },
  "overrides": {
    "@angular/cli": {
      "@modelcontextprotocol/sdk": "1.26.0"
    },
    "@vercel/node": {
      "path-to-regexp": "6.3.0",
      "undici": "7.20.0"
    },
    "@isaacs/brace-expansion": "5.0.1",
    "express": {
      "qs": "6.14.2"
    },
    "minimatch": "10.2.2",
    "ajv": "8.18.0"
  }
}
